<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="AppBundle\Entity\User">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="username" type="string" length="50"/>
        <field name="password_hash" type="string" length="100"/>
        <field name="name" type="string" length="50"/>
        <field name="surname" type="string" length="50"/>
        <field name="email" type="string" length="50" unique="true"/>

        <one-to-many target-entity="RepairOrder" mapped-by="user" field="repair_orders">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

        <many-to-one field="role" target-entity="Role" inversed-by="user"/>
    </entity>
</doctrine-mapping>