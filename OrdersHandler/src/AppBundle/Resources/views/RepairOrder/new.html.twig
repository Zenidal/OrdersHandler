{% extends '::base.html.twig' %}

{% block body -%}
    <div class="repair_orders_new">
        <div class="container-fluid">
            <legend>Repair order creation</legend>
            <div class="repair_orders_new-error">
                {{ form_errors(form) }}
            </div>
            <div class="repair_orders_new-form">
                {{ form_start(form) }}
                <div class="form-group">
                    <label for="repairOrder_description">Description</label>
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'placeholder': 'Enter description'} }) }}
                </div>
                <div class="form-group">
                    <label for="repairOrder_address">Address</label>
                    {{ form_widget(form.address, { 'attr': {'class': 'form-control', 'placeholder': 'Enter address'} }) }}
                </div>
                <div class="form-group">
                    <label for="repairOrder_company">Company</label>
                    {{ form_widget(form.company, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <div class="form-group">
                    <label for="repairOrder_place">Place</label>
                    {{ form_widget(form.place, { 'attr': {'class': 'form-control'} }) }}
                </div>
                {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-default'} }) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
